<div class="container d-flex flex-column align-items-center text-center">
  <%= link_to 'back to task list', tasks_path, class: 'btn btn-primary m-3' %>
  <div class="card shadow" style="min-width: 50vw">
    <div class="card-body">
      <div class="card-title">
        <h4><%= @task.completed ? '✅' : '⏹️' %><%= @task.title %></h4>
      </div>
      <div class="card-text">
        <p><%= @task.details %></p>
      </div>
      <div class="justify-content-between">
        <%= link_to 'edit', edit_task_path(@task), class: 'card-link btn btn-outline-primary btn-sm' %>
        <%= link_to 'delete', task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Confirm Deletion"}, class: 'card-link btn btn-sm btn-outline-secondary' %>
      </div>
      </div>
    </div>

  </div>
</div>
