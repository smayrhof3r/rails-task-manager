<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<p>This task is <%= 'not' unless @task.completed %> completed<p>
<%= link_to 'edit this task', edit_task_path(@task), class: 'btn btn-primary' %>
<%= link_to 'back to task list', tasks_path, class: 'btn btn-primary' %>
<%= link_to 'delete', task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Confirm Deletion"}, class: 'btn btn-primary' %>
